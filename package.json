{
  "name": "playpost-synthesizer",
  "main": "dist/index.js",
  "private": true,
  "version": "1.0.27",
  "engines": {
    "node": "12.14.0"
  },
  "scripts": {
    "dev": "npm run debug",
    "debug": "PORT=3001 ts-node-dev -r dotenv/config --inspect --respawn --transpileOnly ./src/index.ts",
    "build": "npx tsc -p tsconfig.production.json",
    "build:docker": "docker build --tag=playpost-synthesizer .",
    "start": "node dist/index.js",
    "start:dev": "node -r dotenv/config dist/index.js",
    "test": "npm run lint && npm run jest && npm run typescript:check",
    "test:watch": "npm run jest:watch",
    "jest": "NODE_ENV=test jest --silent --maxWorkers=4 --passWithNoTests",
    "jest:watch": "NODE_ENV=test jest --watch --silent --verbose --coverage",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "upgrade-interactive": "npm-check --update",
    "tsc:watch": "tsc -p ./ --noEmit -w",
    "typescript:check": "tsc -p ./ --noEmit",
    "preversion": "npm test",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "postversion": "git push && git push --tags --no-verify",
    "testrunner": "ts-node-dev ./tests/e2e/runner.ts"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "@google-cloud/storage": "^4.1.3",
    "@google-cloud/text-to-speech": "^2.1.0",
    "@sentry/integrations": "^5.10.2",
    "@sentry/node": "^5.10.2",
    "aws-sdk": "^2.596.0",
    "express": "^4.17.1",
    "ffmpeg-static": "^2.7.0",
    "fluent-ffmpeg": "^2.1.2",
    "get-audio-duration": "^1.0.0",
    "md5": "^2.2.1",
    "polly-ssml-split": "^0.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/ffmpeg-static": "^2.0.0",
    "@types/fluent-ffmpeg": "^2.1.13",
    "@types/fs-extra": "^8.0.1",
    "@types/md5": "^2.1.33",
    "@types/node": "^13.1.1",
    "@types/rimraf": "^2.0.3",
    "auto-changelog": "^1.16.2",
    "dotenv": "^8.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "npm-check": "^5.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
